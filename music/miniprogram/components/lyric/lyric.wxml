<scroll-view hidden="{{showLyric}}" class="lyric-scroll" scroll-y scroll-top="{{scrollTop}}" scroll-with-animation="true"> 
  <view class="lyric-panel"> 
    <block wx:for="{{lyricList}}" wx:key="item">
      <view class="lyric {{index==nowIndex ? 'hightlight-lyric' : ''}}">{{item.lyricContent}}</view>
    </block>
  </view>
</scroll-view>

